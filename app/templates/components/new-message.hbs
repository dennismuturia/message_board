{{#if addNewMessage}}
<h1>New message</h1>
<div>
  <form>
    <div class="form-group">
      <label for="topic">Topic</label>
      {{input value=topic id="topic"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="additional">Additional Info</label>
      {{input value=additional id="additional"}}
    </div>
    <button {{action 'saveMessage1'}}>Save Question</button>
  </form>
</div>
{{else}}
<button {{action 'messageFormShow'}}>New Question</button>
{{/if}}
