{{#if addNewAnswer}}
<h4>New Answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" class="form-control"}}
      </div>
      <button {{action 'saveAnswer'}} class="btn btn-success">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}} class="btn btn-warning">New Answer</button>
{{/if}}
